#nav 
  .col-sm.nav-align 
    h1 Kitchen 
  .col-sm.nav-align
    a(href="/")
      span.button Accueil
    a(href="/courses")
      span.button Cours de cuisine
    a(href="/subscribers")
      span.button Contact
    // Button trigger modal
    button.btn.btn-primary(type='button' id ="modal-button" data-bs-toggle='modal' data-bs-target='#myModal')
      | Derniers Cours
    include ../courses/_coursesModal



  .login 
    if(loggedIn)
      p Connect√© en tant que 
        a(href=`/users/${currentUser._id}`) #{currentUser.fullName}
        span.log-out
          a(href="/users/logout") Deconnexion  
    else 
      a(href="/users/login") Connexion 
  .flashes 
    if(flashMessages)
      if(flashMessages.success)
        .flash.success 
          p #{flashMessages.success}
      else if(flashMessages.error)
        .flash.error
          p #{flashMessages.error}
